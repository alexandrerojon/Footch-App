
<h1 class= "h1">Create your party!</h1>

<%= simple_form_for(@party) do |f| %>

<%= f.input :name, placeholder: "What's the name of the groupe" %>
<%= f.input :date, html5: true, placeholder: "What's the date of the party" %>
<%= f.button :submit, "Start party", :class => "btn btn-create", :id => "create_party" %> </button>
<% end %>

