<div class="container">

    <div class="h1 d-flex justify-content-center">
      <h1>All your recipes</h1>
    </div>

    <div class="d-flex justify-content-center">
      <div>
        <%= form_tag cookbooks_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
          placeholder: "Find your recipe"
          %>
          <%= submit_tag "Search", class: "btn btn-create" %>
          <button type="button" class="btn btn-create">  <%= link_to "Create recipe", new_recipe_path %></button>
          <% end %>
      </div>
    </div>
    <div class="list">
      <%  @recipes.each do |recipe| %>
        <div class="recipe_card">
          <%= link_to recipe_path(recipe) do %>
          <div class="image_mini">
            <%if recipe.picture.attached? %>
             <%= cl_image_tag recipe.picture.key %>
            <% else %>
              <%= image_tag recipe.image %>
            <% end %>
          </div>
            <% end %>
          <div class="info-card">
            <%= link_to recipe_path(recipe) do %>
            <div class="text-info text-truncate">
              <div class="name text-truncate">
                <%= recipe.name %>
              </div>
              <div class="info">
                Preparation time:<span><%= recipe.min %> min. </span>
              </div>
              <div class="info">
                Number of servings: <span><%= recipe.serving %>.prs</span>
              </div>
              <div class="info">
                <div class="text-truncate">Diet:<span> <%= recipe.diet.join(", ") %></span> </div>
              </div>
            </div>
            <% end %>
            <div class="button_card">
              <div class="btn-create">
                <%= link_to 'DELETE', cookbook_path(recipe), method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

</div>

