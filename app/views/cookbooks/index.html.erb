<div>

  <h1>Welcome to your cookbook</h1>
    <h3><button type="button" class="btn btn-primary">  <%= link_to "Add your own recipe!", new_recipe_path %></button></h3>

    <div>
      <%= form_tag cookbooks_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
        placeholder: "Find your recipe"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
    </div>

    <div class="list">
      <% @recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe) do %>
        <div class="recipe_card">
          <div class="image_mini">
            <%if recipe.picture.attached? %>
             <%= cl_image_tag recipe.picture.key %>
            <% else %>
              <%= image_tag recipe.image %>
            <% end %>
          </div>
          <div class="info-card container">
            <div class="text-info">
              <div class="name row">
                <%= recipe.name.truncate(20) %>
              </div>
              <div class="info row">
                <small>Preparation time:</small> <strong><%= recipe.min %> min. </strong>
              </div>
              <div class="info row">
                <small>Number of servings:</small> <strong><%= recipe.serving %>.prs</strong>
              </div>
              <div class="info row">
                <small>Diet:</small> <strong><%= recipe.diet.join(", ").truncate_words(5) %></strong>
              </div>
            </div>
          <div class="button_card row">
            <div class="btn-create col-3">
              <%= link_to 'DELETE', cookbook_path(recipe), method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
        </div>
      <% end %>
      <% end %>
    </div>


</div>

